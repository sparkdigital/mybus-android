<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bus_line_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/bus" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bus_line_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/abc_search_url_text_selected"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_marginLeft="@dimen/item_divider_margin"
        android:layout_marginRight="@dimen/item_divider_margin" />
</LinearLayout>