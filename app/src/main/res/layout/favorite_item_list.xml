<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/favorite_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Casa"
                android:textColor="@color/abc_search_url_text_selected"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/favorite_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avenida Pedro Luro 2200"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/favorite_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageView
                android:id="@+id/favorite_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_delete" />
        </LinearLayout>

    </LinearLayout>

    <View style="@style/Divider"/>
</LinearLayout>